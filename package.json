{
  "name": "telegram-code",
  "version": "1.0.0",
  "description": "Telegram bot for Claude CLI",
  "main": "dist/index.js",
  "bin": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "claude": "UID=$(id -u) GID=$(id -g) docker compose run --rm claude"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "node-pty": "^1.0.0",
    "telegraf": "^4.16.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0"
  },
  "packageManager": "yarn@4.9.2"
}
