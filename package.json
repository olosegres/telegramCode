{
  "name": "telegram-code",
  "version": "1.0.0",
  "description": "Telegram bot for Claude CLI",
  "main": "dist/index.js",
  "bin": {
    "telegram-code": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "claude": "UID=$(id -u) GID=$(id -g) docker compose run --rm claude"
  },
  "dependencies": {
    "better-sqlite3": "^11.3.0",
    "dotenv": "^16.4.5",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "yarn@4.9.1"
}
